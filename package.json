    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "1.21.1-alpha.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.512.0",
    "next": "^15.2.3",
    "react": "^19.0.0",
